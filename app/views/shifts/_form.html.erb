<%= form_with(model: shift, local: true) do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
      <% shift.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="hidden">
    <p>Timesheet from <%= @shift.timesheet.date_from %> to <%= @shift.timesheet.date_to %><p>
    <%= form.hidden_field :timesheet_id, value: @shift.timesheet.id %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time %>
  </div>

  <div class="hidden">
    <%= form.hidden_field :paid, value: nil %>
  </div>

  <div class="hidden">
    <%= form.hidden_field :clock_in, value: nil %>
  </div>

  <div class="hidden">
    <%= form.hidden_field :clock_out, value: nil %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
