<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Timesheet</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Paid</th>
      <th>Clock in</th>
      <th>Clock out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= link_to shift.timesheet, @shift.timesheet %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td><%= shift.paid %></td>
        <td><%= shift.clock_in %></td>
        <td><%= shift.clock_out %></td>
        <td><%= link_to t('show'), shift %></td>
        <td><%= link_to t('edit'), edit_shift_path(shift) %></td>
        <td><%= link_to t('delete'), shift, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

